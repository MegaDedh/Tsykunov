<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <ImageView
        android:id="@+id/fragment_start_image_container"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        tools:src="@tools:sample/backgrounds/scenic"/>

    <TextView
        android:id="@+id/fragment_start_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fragment_start_image_container"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/text_light_grey_2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:text="Описание" />

<!--    <TextView
        android:id="@+id/fragment_start_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_start_desc"
        android:textColor="@color/text_light_grey_2"
        android:layout_marginStart="8dp"
        tools:text="042042042" />-->

    <ImageView
        android:id="@+id/fragment_start_arrow_back"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="48dp"
        android:visibility="visible"
        android:src="@drawable/ic_baseline_arrow_back_24"/>



    <ImageView
        android:id="@+id/fragment_start_arrow_forward"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="48dp"
        android:src="@drawable/ic_baseline_arrow_forward_24"/>

    <ProgressBar
        android:id="@+id/fragment_start_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_start_image_container"
        app:layout_constraintEnd_toEndOf="@+id/fragment_start_image_container"
        app:layout_constraintStart_toStartOf="@+id/fragment_start_image_container"
        app:layout_constraintTop_toTopOf="@+id/fragment_start_image_container" />


</androidx.constraintlayout.widget.ConstraintLayout>